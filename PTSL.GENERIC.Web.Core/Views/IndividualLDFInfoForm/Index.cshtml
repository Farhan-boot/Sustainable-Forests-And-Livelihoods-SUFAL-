<script>
	function approveLDF() {
		var ldfId = $("#ApproveId").val();
		var approvedLoanAmount = $("#ApproveLoan").val();

		debugger;

		$.ajax({
			cache: false,
			type: "POST",
			url: "/IndividualLDFInfoForm/ApproveLDF",
			data: {
				ldfId,
				approvedLoanAmount
			},
			success: function (data) {
				$('#approveModal').modal('hide')

				window.location.reload();

				if (data.Success) {
					swal(
						'Success',
						data.Message,
						'success'
					);
				} else {
					swal(
						'Error',
						data.Message,
						'error'
					);
				}

				$("#ApproveId").val(0);
				$("#ApproveLoan").val(0);
			},
			error: function (data) {
				$("#ApproveId").val(0);
				$("#ApproveLoan").val(0);

				swal(
					'Error',
					data.Message,
					'error'
				);

				$('#approveModal').modal('hide')
			}
		});
	}

	$(document).ready(function () {
		$('#tableExport_filter').DataTable({
