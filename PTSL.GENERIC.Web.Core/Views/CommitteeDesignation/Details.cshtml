@model PTSL.GENERIC.Web.Core.Model.EntityViewModels.ForestManagement.CommitteeDesignationVM
@{
    ViewBag.Title = "Details of Committee Designation";
}

<div class="card">
    <div class="card-header">
        <h4>
            <a href="/CommitteeDesignation/Index" class="mr-1 back">
                <svg width="20" height="20" viewBox="0 0 32 32">
                    <path fill="currentColor" d="m14 26l1.41-1.41L7.83 17H28v-2H7.83l7.58-7.59L14 6L4 16l10 10z" />
                </svg>
            </a>
            Details of Committee Designation
        </h4>
    </div>
    <div class="card-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label style="font-size:15px;">Committee Type: <b>@Model.CommitteeType.GetEnumDisplayName()</b></label>
            </div>
            <div class="form-group">
                <label style="font-size:15px;">Sub Committee Type: <b>@Model.SubCommitteeType?.GetEnumDisplayName()</b></label>
            </div>
            <div class="form-group">
                <label style="font-size:15px;">English Name: <b>@Model.Name</b></label>
            </div>
            <div class="form-group">
                <label style="font-size:15px;">Bangla Name: <b>@Model.NameBn</b></label>
            </div>
        </div>
    </div>
</div>

