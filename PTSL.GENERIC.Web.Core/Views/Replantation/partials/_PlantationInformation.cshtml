@model PTSL.GENERIC.Web.Core.Model.EntityViewModels.SocialForestry.NewRaisedPlantationVM;
@{
    var newRaisedDetails = Model;
}

<div class="p-2 green-card" style="border-radius: 5px;">
    <div class="row custom forest-location">
        <div class="col-6 p-1">

            <fieldset class="p-2">
                <legend class="float-none w-auto">Forest Administrative Unit</legend>
                <div class="row">
                    <div class="col-6 pr-1">
                        <label class="m-0">Forest Circle <span style="color:red;">*</span></label>
                        <select class="" id="ForestCircleId" name="ForestCircleId" disabled>
                            <!option selected>@newRaisedDetails.ForestCircle?.Name</!option>
                        </select>
                    </div>
                    <div class="col-6 pl-1">
                        <label class="m-0">Forest Division <span style="color:red;">*</span></label>
                        <select class="" id="ForestDivisionId" name="ForestDivisionId" disabled>
                            <!option selected>@newRaisedDetails.ForestDivision?.Name</!option>
                        </select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-6 pr-1">
                        <label class="m-0">Forest Range/SFNTC <span style="color:red;">*</span></label>
                        <select class="" id="ForestRangeId" name="ForestRangeId" disabled>
                            <!option selected>@newRaisedDetails.ForestRange?.Name</!option>
                        </select>
                    </div>
                    <div class="col-6 pl-1">
                        <label class="m-0">Forest Beat/Camp/SFPC <span style="color:red;">*</span></label>
                        <select class="" id="ForestBeatId" name="ForestBeatId" disabled>
                            <!option selected>@newRaisedDetails.ForestBeat?.Name</!option>
                        </select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-6 pr-1">
                        <label class="m-0">Zone/Area</label>
                        <select class="" id="ZoneOrAreaId" name="ZoneOrAreaId" disabled>
                            <!option selected>@newRaisedDetails.ZoneOrArea?.Name</!option>
                        </select>
                    </div>
                    <div class="col-6 pl-1">
                    </div>
                </div>
            </fieldset>

        </div>

        <div class="col-6 p-1">

            <fieldset class="p-2">
                <legend class="float-none w-auto">Civil Administrative Unit</legend>
                <div class="row">
                    <div class="col-6 pr-1">
                        <label class="m-0">Civil Division <span style="color:red;">*</span></label>
                        <select class="" id="DivisionId" name="DivisionId" disabled>
                            <!option selected>@newRaisedDetails.Division?.Name</!option>
                        </select>
                    </div>
                    <div class="col-6 pl-1">
                        <label class="m-0">Civil District <span style="color:red;">*</span></label>
                        <select class="" id="DistrictId" name="DistrictId" disabled>
                            <!option selected>@newRaisedDetails.District?.Name</!option>
                        </select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-6 pr-1">
                        <label class="m-0">Civil Upazilla <span style="color:red;">*</span></label>
                        <select class="" id="UpazillaId" name="UpazillaId" disabled>
                            <!option selected>@newRaisedDetails.Upazilla?.Name</!option>
                        </select>
                    </div>
                    <div class="col-6 pl-1">
                        <label class="m-0">Civil Union <span style="color:red;">*</span></label>
                        <select class="" id="UnionId" name="UnionId" disabled>
                            <!option selected>@newRaisedDetails.Union?.Name</!option>
                        </select>
                    </div>
                </div>
            </fieldset>

        </div>
    </div>
</div>


@* Land owning and NGO *@

<div class="p-2 custom green-card mt-2" style="border-radius: 5px;" id="">
    <div class="row custom forest-location">
        <div class="col-6 p-1">
            <fieldset class="p-2 col-12">
                <legend class="float-none w-auto">Land owning agency</legend>
                <div class="row col-md-6">
                    <label>
                        Land owning agency
                    </label>
                    <select id="Plantation_LandOwningAgencyId" name="LandOwningAgencyId" required="" disabled>
                        <!option selected>@newRaisedDetails.LandOwningAgency?.Name</!option>
                    </select>
                </div>
            </fieldset>
        </div>
        <div class="col-6 p-1">
            <fieldset class="p-2 col-12">
                <legend class="float-none w-auto">NGO Information</legend>
                <div class="row col-md-6">
                    <label>
                        NGO
                    </label>
                    <select id="Plantation_SocialForestryNgoId" name="SocialForestryNgoId" disabled>
                        <!option selected>@newRaisedDetails.SocialForestryNgo?.Name</!option>
                    </select>
                </div>
            </fieldset>
        </div>

    </div>
</div>
