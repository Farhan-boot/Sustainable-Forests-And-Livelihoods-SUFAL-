@model PTSL.GENERIC.Web.Core.Model.EntityViewModels.Labour.LabourDatabaseVM
@{
    ViewBag.Title = "Details of Labour Database";
}

<div class="card">
    <div class="card-header">
        <h4>
            <a href="/LabourDatabase/Index" class="mr-1 back">
                <svg width="20" height="20" viewBox="0 0 32 32">
                    <path fill="currentColor" d="m14 26l1.41-1.41L7.83 17H28v-2H7.83l7.58-7.59L14 6L4 16l10 10z" />
                </svg>
            </a>
            Details of Labour Database
        </h4>
    </div>

    <div class="card-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label style="font-size:15px;">Forest Circle: <b>@Model.ForestCircle?.Name</b></label>
            </div>
            <div class="form-group">
                <label style="font-size:15px;">Forest Division: <b>@Model.ForestDivision?.Name</b></label>
            </div>
            <div class="form-group">
                <label style="font-size:15px;">Forest Range: <b>@Model.ForestRange?.Name</b></label>
            </div>
            <div class="form-group">
                <label style="font-size:15px;">Forest Beat: <b>@Model.ForestBeat?.Name</b></label>
            </div>
            <div class="form-group">
                <label style="font-size:15px;">Forest FCV/VCF: <b>@Model.ForestFcvVcf?.Name</b></label>
            </div>
            <div class="form-group">
                <label style="font-size:15px;">Civil Division: <b>@Model.Division?.Name</b></label>
            </div>
            <div class="form-group">
                <label style="font-size:15px;">Civil District: <b>@Model.District?.Name</b></label>
            </div>
            <div class="form-group">
                <label style="font-size:15px;">Civil Upazilla: <b>@Model.Upazilla?.Name</b></label>
            </div>
            <div class="form-group">
                <label style="font-size:15px;">Civil Union: <b>@Model.Union?.Name</b></label>
            </div>
        </div>
        <br />
        @if (Model.Survey is not null)
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label style="font-size:15px;">Labour Type: <b>Beneficiary</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Labour Name: <b>@Model.Survey?.BeneficiaryName</b></label>
                </div>

                <div class="form-group">
                    <label style="font-size:15px;">Mother Name: <b>@Model.Survey?.BeneficiaryMotherName</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Father Name: <b>@Model.Survey?.BeneficiaryFatherName</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Spouse Name: <b>@Model.Survey?.BeneficiarySpouseName</b></label>
                </div>


                <div class="form-group">
                    <label style="font-size:15px;">Labour NID: <b>@Model.Survey?.BeneficiaryNid</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Labour Mobile: <b>@Model.Survey?.BeneficiaryPhone</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Gender: <b>@Model.Survey?.BeneficiaryGenderString</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Ethnicity: <b>@Model.Survey?.BeneficiaryEthnicity?.Name</b></label>
                </div>
            </div>
        }
        else
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label style="font-size:15px;">Labour Type: <b>Other</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Labour Name: <b>@Model.OtherLabourMember?.FullName</b></label>
                </div>

                <div class="form-group">
                    <label style="font-size:15px;">Mother Name: <b>@Model.OtherLabourMember?.MotherName</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Father Name: <b>@Model.OtherLabourMember?.FatherName</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Spouse Name: <b>@Model.OtherLabourMember?.SpouseName</b></label>
                </div>

                <div class="form-group">
                    <label style="font-size:15px;">Labour NID: <b>@Model.OtherLabourMember?.NID</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Labour Mobile: <b>@Model.OtherLabourMember?.PhoneNumber</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Gender: <b>@Model.OtherLabourMember?.Gender.ToString()</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Ethnicity: <b>@Model.OtherLabourMember?.Ethnicity?.Name</b></label>
                </div>
            </div>
        }
        <div class="form-horizontal">
            <div class="form-group">
                <label style="font-size:15px;">Labour Code: <b>@Model.CodeNo</b></label>
            </div>
        </div>

        <div class="form-horizontal">
            <div class="form-group">
                <label style="font-size:15px;">Address: <b>@Model.Address</b></label>
            </div>
        </div>

    </div>
</div>

