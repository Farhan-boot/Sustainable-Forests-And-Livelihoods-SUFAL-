@model List<PTSL.GENERIC.Web.Core.Model.EntityViewModels.Beneficiary.LiveStockVM>

@{ var index = 0; }

@foreach (var livestock in Model)
{
    index++;

    <div class="card LivestockChild" data-id="@index">
        <input class="Id" type="hidden" value="@livestock.Id" />
        <div class="card-body mt-3">
            <h5 class="d-inline-block">@index</h5>
            <button type="button" class="remove-item btn btn-danger btn-sm float-right" onclick="RemoveLivestockItem(@index, @livestock.Id)">x</button>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>
                        Name of Livestock
                        <span style="color:red;">*</span>
                    </label>
                    <select class="form-control required LiveStockTypeId" name="LiveStockTypeId[]">
                        <option value="">Select</option>
                        @foreach (var item in ViewBag.LiveStockTypeId)
                        {
                            <!option value="@item.Id" @(livestock.LiveStockTypeId == item.Id ? "selected" : "")>@item.Name</!option>
                        }
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>
                        Quantity
                        <span style="color:red;">*</span>
                    </label>
                    <input type="number" class="form-control required LiveStockQuantity" name="LiveStockQuantity" value="@(livestock.Id == 0 ? "" : livestock.LiveStockQuantity)" min="0" placeholder="Enter Livestock quantity" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>
                        Estimated Cost/ Market value (BDT)
                        <span style="color:red;">*</span>
                    </label>
                    <input type="number" class="form-control required LivestockCost" name="LivestockCost" value="@(livestock.Id == 0 ? "" : livestock.LivestockCost)" min="0" placeholder="Enter Livestock Cost" />
                </div>
            </div>
        </div>
    </div>
}
