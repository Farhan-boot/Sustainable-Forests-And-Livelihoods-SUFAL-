@model List<PTSL.GENERIC.Web.Core.Model.EntityViewModels.Beneficiary.ExistingSkillVM>

@{ var index = 0; }

@foreach (var skill in Model)
{
    index++;

    <div class="card ExistingSkillChild" data-id="@index">
        <input class="Id" type="hidden" value="@skill.Id" />
        <div class="card-body mt-3">
            <h5 class="d-inline-block">@index</h5>
            <button type="button" class="remove-item btn btn-danger btn-sm float-right" onclick="RemoveExistingSkillItem(@index, @skill.Id)">x</button>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>
                        Name of the Skill
                    </label>
                    <input type="text" class="form-control SkillName" name="SkillName" value="@skill.SkillName" placeholder="Enter skill name" />
                </div>
                <div class="form-group col-md-6">
                    <label>
                        Remarks
                    </label>
                    <input type="text" class="form-control ExistingSkillRemarks" value="@skill.Remarks" placeholder="Enter remarks" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>
                        Skill level
                    </label>
                    <select class="form-control SkillLevelEnum" name="SkillLevelEnum">
                        <option value="">Choose Level</option>
                        @foreach (var item in ViewBag.SkillLevelEnum)
                        {
                            <!option value="@item.Id" @((skill.SkillLevelEnum != null && (int)skill.SkillLevelEnum == item.Id) ? "selected" : "")>@item.Name</!option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>
}
