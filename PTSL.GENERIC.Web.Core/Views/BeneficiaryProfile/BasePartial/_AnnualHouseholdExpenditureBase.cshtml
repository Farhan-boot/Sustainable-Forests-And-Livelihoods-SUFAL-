@model List<PTSL.GENERIC.Web.Core.Model.EntityViewModels.Beneficiary.AnnualHouseholdExpenditureVM>

@{ var index = 0; }

@foreach (var expenditure in Model)
{
    index++;

    <div class="card HouseholdExpenditureChild" data-id="@index">
        <input class="Id" type="hidden" value="@expenditure.Id" />
        <div class="card-body mt-3">
            <h5 class="d-inline-block">@index</h5>
            <button type="button" class="remove-item btn btn-danger btn-sm float-right" onclick="RemoveHouseholdExpenditure(@index, @expenditure.Id)">x</button>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>
                        8.1. Major item of expenditure
                    </label>
                    <select class="form-control required ExpenditureTypeId" name="ExpenditureTypeId[]">
                        <option value="">Choose..</option>
                        @foreach (var item in ViewBag.ExpenditureTypeId)
                        {
                            <!option value="@item.Id" @((expenditure.ExpenditureTypeId != null && (int)expenditure.ExpenditureTypeId == item.Id) ? "selected" : "")>@item.Name</!option>
                        }
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>
                        8.2. Expenditure (BDT)
                    </label>
                    <input class="form-control ExpenditureCost" type="number" min="0" name="ExpenditureCost" value="@(expenditure.Id == 0 ? "" : expenditure.ExpenditureCost)" placeholder="Expenditure Cost" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>
                        8.3. Remarks
                    </label>
                    <input class="form-control ExpenditureRemarks" type="text" name="ExpenditureRemarks" value="@expenditure.ExpenditureRemarks" placeholder="Remarks" />
                </div>
            </div>
        </div> <!-- card body end -->
    </div>
}
