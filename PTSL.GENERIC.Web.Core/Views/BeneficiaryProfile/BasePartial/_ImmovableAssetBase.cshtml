@model List<PTSL.GENERIC.Web.Core.Model.EntityViewModels.Beneficiary.ImmovableAssetVM>

@{ var index = 0; }

@foreach (var asset in Model)
{
    index++;

    <div class="card ImmovableAssetChild" data-id="@index">
        <input class="Id" type="hidden" value="@asset.Id" />
        <div class="card-body mt-3">
            <h5 class="d-inline-block">@index</h5>
            <button type="button" class="remove-item btn btn-danger btn-sm float-right" onclick="RemoveImmovableAssetItem(@index, @asset.Id)">x</button>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>
                        Category
                        <span style="color:red;">*</span>
                    </label>
                    <select class="form-control required ImmovableAssetTypeId" name="ImmovableAssetTypeId[]">
                        <option value="">Choose</option>
                        @foreach (var item in ViewBag.ImmovableAssetTypeId)
                        {
                            <!option value="@item.Id" @(asset.ImmovableAssetTypeId == item.Id ? "selected" : "")>@item.Name</!option>
                        }
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>
                        Annual Return
                        <span style="color:red;">*</span>
                    </label>
                    <input type="number" class="form-control required ImmovableAnnualReturn" name="ImmovableAnnualReturn" value="@(asset.Id == 0 ? "" : asset.ImmovableAnnualReturn)" min="0" placeholder="Enter Annual return">
                </div>
            </div>
        </div>
    </div>
}
