@model List<PTSL.GENERIC.Web.Core.Model.EntityViewModels.Beneficiary.AssetVM>

@{ var index = 0; }

@foreach (var asset in Model)
{
    index++;

    <div class="card AssetsChild" data-id="@index">
        <input class="Id" type="hidden" value="@asset.Id" />
        <div class="card-body mt-3">
            <h5 class="d-inline-block">@index</h5>
            <button type="button" class="remove-item btn btn-danger btn-sm float-right" onclick="RemoveAssetItem(@index, @asset.Id)">x</button>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>
                        Name of Assets
                        <span style="color:red;">*</span>
                    </label>
                    <select class="form-control required AssetTypeId" name="AssetTypeId[]">
                        <option value="">Choose</option>
                        @foreach (var item in ViewBag.AssetTypeId)
                        {
                            <!option value="@item.Id" @(asset.AssetTypeId == item.Id ? "selected" : "")>@item.Name</!option>
                        }
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>
                        Quantity
                        <span style="color:red;">*</span>
                    </label>
                    <input type="number" class="form-control required AssetQuantity" name="AssetQuantity" value="@(asset.Id == 0 ? "" : asset.AssetQuantity)" min="0" placeholder="Enter Asset quantity">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>
                        Estimated Cost / Market value (BDT)
                        <span style="color:red;">*</span>
                    </label>
                    <input type="number" class="form-control required AssetsCost" name="AssetsCost" value="@(asset.Id == 0 ? "" : asset.AssetsCost)" min="0" placeholder="Enter Estimated Cost">
                </div>
            </div>
        </div>
    </div>
}
