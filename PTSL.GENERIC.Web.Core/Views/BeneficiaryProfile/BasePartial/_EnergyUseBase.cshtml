@model List<PTSL.GENERIC.Web.Core.Model.EntityViewModels.Beneficiary.EnergyUseVM>

@{ var index = 0; }

@foreach (var energy in Model)
{
    index++;

    <div class="card EnergyUseChild" data-id="@index">
        <input class="Id" type="hidden" value="@energy.Id" />
        <div class="card-body mt-3">
            <h5 class="d-inline-block">@index</h5>
            <button type="button" class="remove-item btn btn-danger btn-sm float-right" onclick="RemoveEnergyUseItem(@index, @energy.Id)">x</button>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>
                        3.5.a. Energy Use
                        <span style="color:red;">*</span>
                    </label>
                    <select class="form-control required EnergyTypeId" name="EnergyTypeId[]">
                        <option value="">Choose</option>
                        @foreach (var item in ViewBag.EnergyTypeId)
                        {
                            <!option value="@item.Id" @(energy.EnergyTypeId == item.Id ? "selected" : "")>@item.Name</!option>
                        }
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>
                        3.5.b. Monthly Energy Use (in %)
                        <span style="color:red;">*</span>
                    </label>
                    <input type="number" class="form-control required EnergyUsesMonthly" name="EnergyUsesMonthly" value="@(energy.Id == 0 ? "" : energy.EnergyUsesMonthly)" min="0" max="100000" placeholder="Enter Monthly Energy Use">
                </div>
            </div>
        </div>
    </div>
}
