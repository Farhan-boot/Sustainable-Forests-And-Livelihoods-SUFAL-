                        <label style="font-size:15px;">Total cost of production (Tk): <b>@(gross.TotalCostOfProduction)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Total consumption (in Q unit): <b>@(gross.TotalConsumption)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Quantity Sold (in Q Unit): <b>@(gross.QuantitySold)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Total value sold (Tk): <b>@(gross.TotalValueSold)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Net income (BDT): <b>@(gross.TotalNetIncome)</b></label>
                    </div>
                }

                <h6 class="hr">Manual Physical Work (Total Annual Income = @Model.GrandTotalAnnualPhysicalIncome)</h6>
                @{
                    var manualPhysicalIndex = 0;
                    var manualPhysicalWorkList = Model.ManualPhysicalWorks ?? new List<ManualPhysicalWorkVM>();
                }
                @foreach (var manual in manualPhysicalWorkList)
                {
                    manualPhysicalIndex++;

                    if (manualPhysicalIndex != 1)
                    {
                        <hr />
                    }

                    <h5>@manualPhysicalIndex</h5>
                    <div class="form-group">
                        <label style="font-size:15px;">Income Source: <b>@(manual.ManualIncomeSourceType?.Name)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">No of Male: <b>@(manual.NoOfMale)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">No of Female: <b>@(manual.NoOfFemale)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">No of Active month: <b>@(manual.NoOfActiveMonth)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Avg No of person days active/month: <b>@(manual.AvgNoPersonActivePerMonth)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Average daily Income: <b>@(manual.AvgDailyIncome)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Total person days in last 12 months: <b>@(manual.TotalPerson)</b></label>
                    </div>
					<div class="form-group">
                        <label style="font-size:15px;">Annual income: <b>@(manual.TotalAnnualIncome)</b></label>
                    </div>
                }

