                }
                @foreach (var gross in grossMarginIncomeAndCostStatus)
                {
                    grossMarginIncomeIndex++;

                    if (grossMarginIncomeIndex != 1)
                    {
                        <hr />
                    }

                    <h5>@grossMarginIncomeIndex</h5>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label style="font-size:15px;">Name of the Products: <b>@(gross.ProductName)</b></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Area (decimals): <b>@(gross.LandArea)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Production Unit of measurement (Q unit): <b>@(gross.MeasurementOfProduct)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Total production of household (in Q unit): <b>@(gross.TotalProductionHousehold)</b></label>
                    </div>
