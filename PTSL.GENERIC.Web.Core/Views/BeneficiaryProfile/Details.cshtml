@using PTSL.GENERIC.Web.Core.Helper;
@using PTSL.GENERIC.Web.Core.Model.EntityViewModels.Beneficiary;
@model PTSL.GENERIC.Web.Core.Model.EntityViewModels.Beneficiary.SurveyVM
@{
    ViewBag.Title = "Beneficiary Detatils";
}

<style>
    fieldset {
        padding: 0px 15px;
        border: 1px solid gray;
        overflow: hidden;
    }
    fieldset legend {
        width: auto;
    }

    .hr {
        position: relative;
        margin-bottom: 15px;
        font-size: 20px;
    }
        .hr:after {
            content: "";
            height: 1px;
            position: absolute;
            width: 100%;
            background: grey;
            top: 50%;
            margin-left: 10px;
        }
</style>

<div class="card">
    <div class="card-header">
        <h4>
			<a href="/BeneficiaryProfile/Index" class="mr-1 back">
                <svg width="20" height="20" viewBox="0 0 32 32">
                    <path fill="currentColor" d="m14 26l1.41-1.41L7.83 17H28v-2H7.83l7.58-7.59L14 6L4 16l10 10z" />
                </svg>
            </a>
			Beneficiary Detatils
		</h4>
    </div>

    <div class="card-body">
        <div class="form-horizontal">
            <fieldset>
                <legend>Forest Administrative Unit</legend>
                <div class="form-group">
                    <label style="font-size:15px;">Forest Circle: <b>@(Model.ForestCircle?.Name)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Forest Division: <b>@(Model.ForestDivision?.Name)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Forest Range: <b>@(Model.ForestRange?.Name)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Forest Beat: <b>@(Model.ForestBeat?.Name)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Forest FCV/VCF: <b>@(Model.ForestFcvVcf?.Name)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">NGO: <b>@(Model.Ngo?.Name)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Forest Village Name: <b>@(Model.ForestVillageName)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Beneficiary Household Serial No: <b>@(Model.BeneficiaryHouseholdSerialNo)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Beneficiary Id: <b>@(Model.BeneficiaryId)</b></label>
                </div>
            </fieldset>

            <fieldset>
                <legend>Beneficiary Profile Picture & Documents</legend>
				<div class="row" style="padding: 0px 10px;">
					<div class="form-group col-md-2" style="padding: 0 !important;">
						<label>
							Beneficiary Profile Picture
						</label>
						<img id="BenProfilePicPreview" src="@(string.IsNullOrEmpty(Model.BeneficiaryProfileURL) ? "/img/profile.webp" : Model.BeneficiaryProfileURL)" style="height: 200px;" class="img-thumbnail form-control" alt="...">
                        <a class="btn btn-sm btn-secondary mt-2" href="@Model.BeneficiaryProfileURL" download="@(FilePathHelper.GetFileNameWithExtensionFromUrl(Model.BeneficiaryProfileURL))">Download</a>
					</div>
					<div class="form-group col-md-2" style="padding: 0 !important;">
						<label>
							Beneficiary NID Front Image
						</label>
						<img src="@Model.BeneficiaryNIDFrontURL" style="height: 200px;" class="img-thumbnail form-control" alt="...">
                        <a class="btn btn-sm btn-secondary mt-2" href="@Model.BeneficiaryNIDFrontURL" download="@(FilePathHelper.GetFileNameWithExtensionFromUrl(Model.BeneficiaryNIDFrontURL))">Download</a>
                    </div>
					<div class="form-group col-md-2" style="padding: 0 !important;">
						<label>
							Beneficiary NID Back Image
						</label>
						<img src="@Model.BeneficiaryNIDBackURL" style="height: 200px;" class="img-thumbnail form-control" alt="...">
                        <a class="btn btn-sm btn-secondary mt-2" href="@Model.BeneficiaryNIDBackURL" download="@(FilePathHelper.GetFileNameWithExtensionFromUrl(Model.BeneficiaryNIDBackURL))">Download</a>
                    </div>

                    <div class="form-group col-md-6 row">
						<div class="col-md-6">
							@if (Model.SurveyDocuments?.Count > 0)
							{
								var index = 1;
								foreach (var doc in Model.SurveyDocuments)
								{
									<div class="d-flex">
										<p class="mr-2">@(index++).</p>
										<a target="_blank" href="@doc.DocumentNameURL">@(doc.DocumentName)</a>
									</div>
								}
							}
						</div>
					</div>
				</div>
            </fieldset>

            <fieldset>
                <legend>General Information</legend>
                <div class="row">
                    <div class="form-group col-md-6">
						<label style="font-size:15px;">Name of Beneficiary: <b>@Model.BeneficiaryName</b></label>
                    </div>
                </div>
                <div class="form-group">
					<label style="font-size:15px;">National ID: <b>@Model.BeneficiaryNid</b></label>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
						<label style="font-size:15px;">Mobile Number: <b>@(string.IsNullOrEmpty(Model.BeneficiaryPhone) ? Model.BeneficiaryPhoneBn : Model.BeneficiaryPhone)</b></label>
                    </div>
                </div>
                <div class="form-group">
					<label style="font-size:15px;">Gender of Beneficiary: <b>@Model.BeneficiaryGenderString</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Ethnicity: <b>@(Model.BeneficiaryEthnicity?.Name)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Age: <b>@(Model.BeneficiaryAge)</b></label>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
						<label style="font-size:15px;">Father's Name: <b>@(Model.BeneficiaryFatherName)</b></label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
						<label style="font-size:15px;">Mother's Name: <b>@(Model.BeneficiaryMotherName)</b></label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
						<label style="font-size:15px;">Spouse's Name (if required): <b>@(Model.BeneficiarySpouseName)</b></label>
                    </div>
                </div>
                <div class="form-group">
					<label style="font-size:15px;">Name of Head of the Household - If Different: <b>@(Model.HeadOfHouseholdName)</b></label>
                </div>
                <div class="form-group">
					<label style="font-size:15px;">Gender of Head of the Household: <b>@(Model.HeadOfHouseholdGender.ToString())</b></label>
                </div>
                <div class="form-group">
					<label style="font-size:15px;">FCV/VCF Added Date: <b>@(Model.FcvVcfAddedDate.ToUITimeStringNullable())</b></label>
                </div>
                <div class="form-group">
					<label style="font-size:15px;">Recipient Status: <b>@(Model.RecipientStatus.GetEnumDisplayName())</b></label>
                </div>

                <h6 class="hr">Present Address</h6>

                <div class="row">
                    <div class="form-group col-md-6">
                        <label style="font-size:15px;">Name of the Village: <b>@(Model.PresentVillageName)</b></label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label style="font-size:15px;">Name of the Post office: <b>@(Model.PresentPostOfficeName)</b></label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label style="font-size:15px;">Division: <b>@(Model.PresentDivision?.Name)</b></label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label style="font-size:15px;">District: <b>@(Model.PresentDistrict?.Name)</b></label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label style="font-size:15px;">Upazilla: <b>@(Model.PresentUpazilla?.Name)</b></label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label style="font-size:15px;">Union: <b>@(Model.PresentUnionNew?.Name)</b></label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label style="font-size:15px;">Union Old: <b>@(Model.PresentUnion)</b></label>
                    </div>
                </div>
                @if (Model.IsPermanentSameAsPresent == false)
				{
					<h6 class="hr">Permanent Address</h6>

					<div class="row">
						<div class="form-group col-md-6">
							<label style="font-size:15px;">Name of the Village: <b>@(Model.PermanentVillageName)</b></label>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-md-6">
							<label style="font-size:15px;">Name of the Post office: <b>@(Model.PermanentPostOfficeName)</b></label>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-md-6">
							<label style="font-size:15px;">Division: <b>@(Model.PermanentDivision?.Name)</b></label>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-md-6">
							<label style="font-size:15px;">District: <b>@(Model.PermanentDistrict?.Name)</b></label>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-md-6">
							<label style="font-size:15px;">Upazilla: <b>@(Model.PermanentUpazilla?.Name)</b></label>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-md-6">
							<label style="font-size:15px;">Union: <b>@(Model.PermanentUnionNew?.Name)</b></label>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-md-6">
							<label style="font-size:15px;">Union Old: <b>@(Model.PermanentUnion)</b></label>
						</div>
					</div>
				}
				else
                {
                    <div class="form-group">
                        <label style="font-size:15px;"><b>Permanent Address is same as Present Address</b></label>
                    </div>
                }
                <div class="form-group">
					<label style="font-size:15px;">Photograph of the SUFAL beneficiary in front of the house:</label>
					<div>
						<img style="object-fit: cover;width: 100%;" src="@Model.BeneficiaryHouseFrontImageURL" />
					</div>
                </div>
				<div>
					<h6>GPS Location of the Household</h6>

					<div class="form-group">
						<label style="font-size:15px;">Latitude: <b>@(Model.BeneficiaryLatitude)</b></label>
					</div>
					<div class="form-group">
						<label style="font-size:15px;">Longitude: <b>@(Model.BeneficiaryLongitude)</b></label>
					</div>
					<div class="form-group">
						<label style="font-size:15px;">Altitude: <b>@(Model.BeneficiaryAltitude)</b></label>
					</div>
					<div class="form-group">
						<label style="font-size:15px;">Precision: <b>@(Model.BeneficiaryPrecision)</b></label>
					</div>
				</div>
            </fieldset>

            <fieldset>
                <legend>Household Members</legend>
                @{ 
                    var memberIndex = 0;
                    var householdMembers = Model.HouseholdMembers ?? new List<HouseholdMemberVM>();
                }
                @foreach (var member in householdMembers)
                {
                    memberIndex++;

                    if (memberIndex != 1)
                    {
                        <hr />
                    }

                    <h5>@memberIndex</h5>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Name: <b>@(member.FullName)</b></label>
                        </div>
                    </div>
                    <div class="form-group">
						<label style="font-size:15px;">Relation with Head of the Household: <b>@(member.RelationWithHeadHouseHoldType?.Name)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Gender: <b>@(member.Gender.ToString())</b></label>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Age: <b>@(member.Age)</b></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Marital Status: <b>@(member.MaritalSatus.ToString())</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Education: <b>@(member.EducationLevel.ToString())</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Main Occupation: <b>@(member.MainOccupation?.Name)</b></label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Secondary Occupation: <b>@(member.SecondaryOccupation?.Name)</b></label>
                    </div>
                    <div class="form-group">
						<label style="font-size:15px;">
							Association with BFD:
							@foreach (var map in member.BFDAssociationHouseholdMembersMap ?? Enumerable.Empty<BFDAssociationHouseholdMembersMapVM>())
							{
								<b>@map.BFDAssociation?.Name, </b>
							}
						</label>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Other Association with BFD: <b>@(member.BFDAssociationTxt)</b></label>
                    </div>
					@if (member.HasDisability)
					{
						<div class="form-group">
							<label style="font-size:15px;">
								Disability Types:
								@foreach (var map in member.DisabilityTypeHouseholdMembersMap ?? Enumerable.Empty<DisabilityTypeHouseholdMembersMapVM>())
								{
									<b>@map.DisabilityType?.Name, </b>
								}
							</label>
						</div>
					}
					else
					{
						<div class="form-group">
							<label style="font-size:15px;">Has No Disability</label>
						</div>
					}
                    <div class="form-group">
                        <label style="font-size:15px;">Safety Net: <b>@(member.SafetyNetType?.Name)</b></label>
                    </div>
				}
            </fieldset>

            <fieldset>
                <legend>Lands - Grand Total Land (Decimal): (@Model.GrandTotalLandOccupancy)</legend>
                @{ 
                    var landIndex = 0;
                    var landOccupancy = Model.LandOccupancy ?? new List<LandOccupancyVM>();
                }
                @foreach (var land in landOccupancy)
                {
                    landIndex++;

                    if (landIndex != 1)
                    {
                        <hr />
                    }

                    <h5>@landIndex</h5>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Land classification: <b>@(land.LandClassificationEnum.GetEnumDisplayName())</b></label>
                        </div>
                        <div class="form-group col-md-6" style="display: none;">
                            <label style="font-size:15px;">Land Classification Other: <b>@(land.LandClassificationTxt)</b></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Homesteads: <b>@(land.Homesteads)</b></label>
                        </div>
                        <div class="form-group col-md-6">
							<label style="font-size:15px;">Productive Land (e.g. Agriculture): <b>@(land.ProductiveLand)</b></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Fallow Land: <b>@(land.FallowLand)</b></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Productive Wetland (Pond): <b>@(land.ProductiveWetland)</b></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Fallow Wetland (Pond): <b>@(land.FallowWetland)</b></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Other Land: <b>@(land.OthersLand)</b></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Total Land (Decimal): <b>@(land.TotalLand)</b></label>
                    </div>
					@*
                    <div class="form-group">
                        <label style="font-size:15px;">Notes: <b>@(land.Notes)</b></label>
                    </div>
					*@
                }
            </fieldset>

            <div class="form-group" style="margin-top: 20px;">
                <label style="font-size:15px;">House type: <b>@(Model.TypeOfHouse?.Name)</b></label>
            </div>

            <fieldset>
				<legend>Livestocks - Total Livestock Estimated Cost/ Market value (BDT): (@Model.GrandTotalLivestockCost)</legend>
                @{ 
                    var liveStockIndex = 0;
                    var livestocks = Model.LiveStocks ?? new List<LiveStockVM>();
                }
                @foreach (var livestock in livestocks)
                {
                    liveStockIndex++;

                    if (liveStockIndex != 1)
                    {
                        <hr />
                    }

					<h5>@liveStockIndex</h5>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Name of Livestock: <b>@(livestock.LiveStockType?.Name)</b></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Quantity: <b>@(livestock.LiveStockQuantity)</b></label>
                        </div>
                        <div class="form-group col-md-6">
							<label style="font-size:15px;">Estimated Cost / Market value (BDT): <b>@(livestock.LivestockCost)</b></label>
                        </div>
                    </div>
                }
            </fieldset>

            <fieldset>
				<legend>Assets - Total Asset Estimated Cost/ Market value (BDT): (@Model.GrandTotalAssetsCost)</legend>
                @{ 
                    var assetIndex = 0;
                    var assets = Model.Assets ?? new List<AssetVM>();
                }
                @foreach (var asset in assets)
                {
                    assetIndex++;

                    if (assetIndex != 1)
                    {
                        <hr />
                    }

                    <h5>@assetIndex</h5>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Name of Assets: <b>@(asset.AssetType?.Name)</b></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Qurantity: <b>@(asset.AssetQuantity)</b></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Estimated Cost / Market value (BDT): <b>@(asset.AssetsCost)</b></label>
                        </div>
                    </div>
                }
            </fieldset>

            <fieldset>
                <legend>Immovable Assets - Total Annual Return: (@Model.GrandTotalImmovableAnnualReturn)</legend>
                @{ 
                    var immAssetIndex = 0;
                    var immovableAssets = Model.ImmovableAssets ?? new List<ImmovableAssetVM>();
                }
                @foreach (var asset in immovableAssets)
                {
                    immAssetIndex++;

                    if (immAssetIndex != 1)
                    {
                        <hr />
                    }

                    <h5>@immAssetIndex</h5>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Category: <b>@(asset.ImmovableAssetType?.Name)</b></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Annual Return: <b>@(asset.ImmovableAnnualReturn)</b></label>
                    </div>
                }
            </fieldset>

            <fieldset>
                <legend>Energy Uses - Grand Total Energy Uses (@Model.GrandTotalEnergyUsesMonthly)</legend>
                @{ 
                    var energyIndex = 0;
                    var energyUses = Model.EnergyUses ?? new List<EnergyUseVM>();
                }
                @foreach (var energy in energyUses)
                {
                    energyIndex++;

                    if (energyIndex != 1)
                    {
                        <hr />
                    }

                    <h5>@energyIndex</h5>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Energy Use: <b>@(energy.EnergyTypeId)</b></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px;">Monthly Energy Use (in %): <b>@(energy.EnergyUsesMonthly)</b></label>
                    </div>
                }
            </fieldset>

            <fieldset>
                <legend>Access To General Facilities</legend>
                <div class="form-group">
                    <label style="font-size:15px;">Is there any problem in the village for access to health services: <b>@(Model.IsProblemToAccessHealthService ? "Yes" : "No")</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Nearest Health Service Location: <b>@(Model.NearestHealthServiceLocation)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Nearest Health Service Distance: <b>@(Model.NearestHealthServiceDistance)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Has problem to access drinking water: <b>@(Model.IsProblemToAccessDrinkingWater ? "Yes": "No")</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Nearest Drinking Water Distance: <b>@(Model.NearestDrinkingWaterDistance)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Nearest Drinking Water Distance: <b>@(Model.NearestDrinkingWaterDistance)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">
                        Source of drinking water (dry season): <b>@(Model.SourceofDrySeasonWaterEnumListText)</b>
                    </label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Other source of drinking water (dry season): <b>@(Model.SourceofDrySeasonWaterTxt)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">
                        Source of drinking water (wet season): <b>@(Model.SourceofWetSeasonWaterEnumListText)</b>
                    </label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Other source of drinking water (wet season): <b>@(Model.SourceofWetSeasonWaterTxt)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Nearest Growth Center: <b>@(Model.NearestGrowthCenter)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Distance from the nearest growth center/market place(km): <b>@(Model.NearestGrowthCenterDistance)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Is there problem in the village for access to education: <b>@(Model.IsProblemToAccessEducation ? "Yes" : "No")</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Availability of educational institutions (school/madrassa etc.) nearby?: <b>@(Model.HasEducationalInstituteNearby ? "Yes" : "No")</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Distance from nearest educational institutions (School/Madrassa etc.): <b>@(Model.EducationalInstituteDistance)</b></label>
                </div>
                <div class="form-group">
                    <label style="font-size:15px;">Accessibility to educational institutions (school/madrassa etc.): <b>@(Model.EducationalInstituteAccessibilityEnum.GetEnumDisplayName())</b></label>
                </div>
