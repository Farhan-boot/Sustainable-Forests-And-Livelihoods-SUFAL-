@model PTSL.GENERIC.Web.Core.Model.EntityViewModels.SocialForestry.Cutting.CuttingPlantationVM;

<fieldset class="p-2 col-12">
    <legend class="float-none w-auto">Trees Marking Information</legend>

    <div>
        <div class="row">
            <div class="col-md-3 pr-1">
                <label>
                    Trees Marked
                    <span style="color:red;">*</span>
                </label>
                <input type="number" x-model="TotalTreeMarked" id="TotalTreeMarked" name="TotalTreeMarked" placeholder="Enter trees marked" required="">
            </div>
            <div class="col-md-3 px-1">
                <label>
                    Marking Cost
                    <span style="color:red;">*</span>
                </label>
                <input type="number" id="MarkingCost" x-model="MarkingCost" name="MarkingCost" placeholder="Enter marking cost" required="">
            </div>
            <div class="col-md-3 px-1">
                <label>
                   File Upload 
                   <span style="color:red;">*</span>
                </label>
                <input id="MarkingFile"
                       name="MarkingFile"
                       type="file"
                       required />
            </div>
            <div class="col-md-3 pl-1">
            </div>
        </div>

        <div class="mt-3">Expected produce Quantity</div>
        <div class="row">
            <div class="col-md-3 pr-1">
                <label>
                    Timber
                    <span style="color:red;">*</span>
                </label>
                <input type="number" id="MarkedTimber" x-model="MarkedTimber" name="MarkedTimber" placeholder="Enter timber" required="">
            </div>
            <div class="col-md-3 px-1">
                <label>
                    Timber Unit
                    <span style="color:red;">*</span>
                </label>
                <select id="MarkedTimberUnitId" x-model="MarkedTimberUnitId" name="MarkedTimberUnitId" required="">
                    <!option value="">Select Unit</!option>
                    <template x-for="data in LotWiseSellingInformationDropdowns.Units">
                        <!option :selected="data.Id == MarkedTimberUnitId" :value="data.Id" x-text="data.Name"></!option>
                    </template>
                </select>
            </div>
            <div class="col-md-3 px-1">
                <label>
                    Pole
                    <span style="color:red;">*</span>
                </label>
                <input type="number" id="MarkedPole" x-model="MarkedPole" name="MarkedPole" placeholder="Enter pole" required="">
            </div>
            <div class="col-md-3 pl-1">
                <label>
                    Pole Unit
                    <span style="color:red;">*</span>
                </label>
                <select id="MarkedPoleUnitId" x-model="MarkedPoleUnitId" name="MarkedPoleUnitId" required="">
                    <!option value="">Select Unit</!option>
                    <template x-for="data in LotWiseSellingInformationDropdowns.Units">
                        <!option :selected="data.Id == MarkedPoleUnitId" :value="data.Id" x-text="data.Name"></!option>
                    </template>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 pr-1">
                <label>
                    Fuel Wood
                    <span style="color:red;">*</span>
                </label>
                <input type="number" id="MarkedFuelWood" x-model="MarkedFuelWood" name="MarkedFuelWood" placeholder="Enter fuel wood" required="">
            </div>
            <div class="col-md-3 px-1">
                <label>
                    Fuel wood Unit
                    <span style="color:red;">*</span>
                </label>
                <select id="MarkedFuelWoodUnitId" x-model="MarkedFuelWoodUnitId" name="MarkedFuelWoodUnitId" required="">
                    <!option value="">Select Unit</!option>
                    <template x-for="data in LotWiseSellingInformationDropdowns.Units">
                        <!option :selected="data.Id == MarkedFuelWoodUnitId" :value="data.Id" x-text="data.Name"></!option>
                    </template>
                </select>
            </div>
            <div class="col-md-3 px-1">
            </div>
            <div class="col-md-3 pl-1">
            </div>
        </div>
    </div>

</fieldset>
