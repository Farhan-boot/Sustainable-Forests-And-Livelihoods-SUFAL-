@model IEnumerable<PTSL.GENERIC.Web.Core.Model.EntityViewModels.SocialForestry.Cutting.DistributionPercentageVM>
@{
    ViewBag.Title = "Details of Distribution Percentage";
}

<div class="card">
    <div class="card-header">
        <h4>
            <a href="/DistributionPercentage/Index" class="mr-1 back">
                <svg width="20" height="20" viewBox="0 0 32 32">
                    <path fill="currentColor" d="m14 26l1.41-1.41L7.83 17H28v-2H7.83l7.58-7.59L14 6L4 16l10 10z" />
                </svg>
            </a>
            Details of Distribution Percentage
        </h4>
    </div>

    <div class="card-body">
        <div class="form-horizontal">
            @if (Model.Count() > 0 && Model != null)
            {
                <div class="form-group">
                    <label style="font-size:15px;">Plantation Type: <b>@Model.FirstOrDefault().PlantationType?.Name</b></label>
                </div>
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-3">

                            <div class="form-group">
                                <label style="font-size:15px;">Fund Type: <b>@item.DistributionFundType?.Name</b></label>
                            </div>
                        </div>
                        <div class="col-3">

                            <div class="form-group">
                                <label style="font-size:15px;">Percentage: <b>@item.Percentage</b></label>
                            </div>

                        </div>
                    </div>

                }
            }
        </div>
    </div>
</div>