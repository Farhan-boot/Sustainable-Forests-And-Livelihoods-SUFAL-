@model PTSL.GENERIC.Web.Core.Model.EntityViewModels.SystemUser.AccesslistVM
@{
    ViewBag.Title = "Details";
}

<div class="card">
    <div class="card-header">
        <h4>
            <a href="/Accesslist/Index" class="mr-1 back">
                <svg width="20" height="20" viewBox="0 0 32 32">
                    <path fill="currentColor" d="m14 26l1.41-1.41L7.83 17H28v-2H7.83l7.58-7.59L14 6L4 16l10 10z" />
                </svg>
            </a>
            Accesslist Details
        </h4>
    </div>

    <div class="card-body">
        <div class="form-horizontal">
            <table style="width:100%">
                <tr>
                    <td style="width:50px;">Accesslist Name: <b>@Model.Mask</b></td>
                    <td style="width:50px;">Action Name: <b>@Model.ActionName</b></td>
                    <td style="width:50px;">Controller Name: <b>@Model.ControllerName</b></td>
                </tr>
                <tr>
                    <td style="width:50px;">Icon Class: <b>@Model.IconClass</b></td>
                    <td style="width:50px;">Is Available For Approval: <b>@Model?.IsAvailableForApproval</b></td>
                </tr>
            </table>
        </div>
    </div>
</div>

